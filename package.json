{
  "name": "mpesaflow",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "check": "biome check --apply .",
    "dev:dash": "turbo dev --filter=@mpesaflow/dashboard",
    "dev:api": "turbo dev --filter=@mpesaflow/api"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "prettier": "^3.2.5",
    "turbo": "^2.1.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.20",
  "workspaces": ["apps/*", "packages/*"],
  "dependencies": {
    "mintlify": "^4.0.222"
  }
}

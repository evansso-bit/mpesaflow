{
  "name": "mpesaflow",
  "private": true,
  "scripts": {
    "build": "if [ \"$SKIP_BIOME_CHECKS\" != \"true\" ]; then npm run lint && npm run type-check; fi && npm run build",
    "dev": "turbo dev",
    "format": "biome format . --write",
    "check": "biome check --apply .",
    "dev:dash": "turbo dev --filter=@mpesaflow/dashboard",
    "dev:api": "turbo dev --filter=@mpesaflow/api"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "prettier": "^3.3.3",
    "turbo": "^2.1.3",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.20",
  "workspaces": ["apps/*", "packages/*"],
  "dependencies": {
    "mintlify": "^4.0.232"
  }
}
